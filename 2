#include <iostream>
#include <string>
#include <vector>
using namespace std;

int main()
{
    vector <string> equation;
    int j = 1;
    int i = 0;
    string s;
    cout << "введите строку из операндов, разделённых символами арифметических операций(+ -)" <<"\n";
    cin >> s;
    equation.resize(j);
    while (i<s.size()){
        if (s[i]==' ') {
            i++;
            continue;
        }
        if(s[i]=='+')
        {
            string el= "";
            el += s[i];
            j += 2;
            equation.resize(j);
            equation[j-2] += el;
            i++;
        }else{
            string el = "";
            el += s[i];
            equation[j-1] += el;
            i++;
        }
    }
    for(int i = 0; i<equation.size();i++)
    {
        cout<<equation[i]<<' ';
    }
    return 0;
}
